<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane styleClass="login-background" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.focusbuddy.controllers.NewLoginController">
           
    <VBox fx:id="loginContainer" maxWidth="400" spacing="20" styleClass="login-container">
        <padding>
            <Insets bottom="30" left="40" right="40" top="30" />
        </padding>
        
        <!-- Header -->
        <VBox alignment="CENTER" spacing="10">
            <Label styleClass="app-title" text="FocusBuddy">
                <font>
                    <Font name="System Bold" size="36.0" />
                </font>
            </Label>
            <Label styleClass="app-subtitle" text="Asisten Produktivitas Anda" />
        </VBox>
        
        <!-- Theme Toggle -->
        <HBox alignment="CENTER_RIGHT">
            <ToggleButton fx:id="themeToggle" prefHeight="25.0" prefWidth="37.0" styleClass="theme-toggle" />
        </HBox>
        
        <!-- Login Form -->
        <VBox spacing="15" styleClass="form-container">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            
            <!-- Username Field -->
            <VBox spacing="5">
                <Label styleClass="field-label" text="Nama Pengguna" />
                <TextField fx:id="usernameField" styleClass="custom-text-field" />
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <Label styleClass="field-label" text="Kata Sandi" />
                <PasswordField fx:id="passwordField" styleClass="custom-text-field" />
            </VBox>
            
            <!-- Remember Me -->
            <CheckBox fx:id="rememberMeCheckbox" selected="false" styleClass="remember-me-checkbox" text="Ingat Saya" />
            
            <!-- Status Message -->
            <Label fx:id="statusLabel" alignment="CENTER" styleClass="status-label" wrapText="true" />
            
            <!-- Buttons -->
            <VBox alignment="CENTER" spacing="10">
                <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLogin" styleClass="primary-button" text="Masuk" />
                <Button fx:id="registerButton" maxWidth="Infinity" onAction="#handleRegister" styleClass="secondary-button" text="Daftar" />
            </VBox>
        </VBox>
        
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="5">
            <Label styleClass="copyright-text" text="Â© 2024 FocusBuddy" />
            <Label styleClass="version-text" text="Versi 1.0.0" />
        </VBox>
    </VBox>
    
</StackPane>
